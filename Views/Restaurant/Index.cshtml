@{
  Layout = "_Layout";
}
@using BestRestaurants.Models
<h2>Restaurant</h2>
@if(Model.Count == 0)
{
  <h3>No Restaurants Have Been Added Yet</h3>
}
<ul>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId})</li>
  }
</ul>
<button class="btn btn-primary">@Html.ActionLink("Add A Restaurant", "Create")</button>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
